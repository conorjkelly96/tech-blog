<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login to OpenSource</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="./styles/styles.css" />
  </head>
  <body>
    <header>
      <nav class="navbar is-transparent">
        <div class="navbar-brand">
          <a class="navbar-item" href="">
            <img
              src="/docs/img/opensource-logo.png"
              alt="OpenSource Logo"
              width="112"
              height="28"
            />
          </a>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item" href="https://bulma.io/"> Home </a>
            <div class="navbar-item is-hoverable">
              <a class="navbar-item" href=""> Dashboard </a>
              <a class="navbar-item" href=""> Login </a>
              <a class="navbar-item" href=""> Sign Up </a>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="login-form">
        <h2
          class="main-text subtitle is-flex-direction-row is-flex-wrap-wrap has-text-centered"
        >
          Welcome Back to OpenSource
        </h2>
        <div
          class="field is-flex-direction-row is-flex-wrap-wrap is-justify-content-center"
        >
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" />
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password" />
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
        <div
          class="buttons is-flex-direction-row is-flex-wrap-wrap is-justify-content-center"
        >
          <button class="button is-link">Log in</button>
        </div>
        <div
          class="is-flex-direction-row is-flex-wrap-wrap has-text-centered is-size-6"
        >
          <p>
            Don't have a OpenSource Profile?
            <a class="sign-up" id="sign-up">Sign Up</a>
          </p>
        </div>
      </div>
    </main>
    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          <strong>OpenSource</strong>
          by
          <a href="https://github.com/conorjkelly96">Conor Kelly</a>. The source
          code is licensed
          <a href="http://opensource.org/licenses/mit-license.php">MIT</a>.
        </p>
      </div>
    </footer>
  </body>
</html>